<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workout"
    android:background="@drawable/background4">

    <Button
        android:id="@+id/back"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/rounded_corners"
        android:text="عودة"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/icon" />

    <Button
        android:id="@+id/warm"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/warmup"/>

    <Button
        android:id="@+id/full"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/fullbody"/>

    <Button
        android:id="@+id/upper"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="270dp"
        android:background="@drawable/upper"/>


    <Button
        android:id="@+id/core"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/core"/>

    <Button
        android:id="@+id/lower"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/lower"/>

    <Button
        android:id="@+id/stretch"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="270dp"
        android:background="@drawable/strech"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="تسخين"
        android:textSize="20sp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text= "الجسم كامل"
        android:textSize="20sp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="150dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="350dp"
        android:text="الجسم العلوي"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="معدة"
        android:textSize="20sp"
        android:layout_marginTop="525dp"
        android:layout_marginLeft="30dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text= "الجسم السفلي"
        android:textSize="20sp"
        android:layout_marginTop="525dp"
        android:layout_marginLeft="150dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="525dp"
        android:text="تمدد"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:textSize="40dp"
        android:text="ما نوع التمارين التي تود البدء بها اليوم:"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"/>


</RelativeLayout>

