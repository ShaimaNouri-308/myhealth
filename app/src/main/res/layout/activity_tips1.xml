        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="-تناول الطعام بشكل جيد"
